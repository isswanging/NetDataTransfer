<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ImageView 
        android:id="@+id/head"
        android:layout_width="@dimen/head_width"
        android:layout_height="@dimen/head_height"
        android:layout_alignParentLeft ="true"
        android:layout_alignParentTop ="true"
        android:layout_marginTop="@dimen/head_margin"
        android:layout_marginBottom="@dimen/head_margin"
        android:src="@drawable/head" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/head"
        android:layout_marginLeft="@dimen/user_marginLeft"
        android:textColor="#000000"
        android:textSize="@dimen/userName_size" />
    
    <TextView
        android:id="@+id/userIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/head"
        android:layout_marginLeft="@dimen/user_marginLeft"
        android:textColor="#000000"
        android:textSize="@dimen/ip_size" />

</RelativeLayout >
